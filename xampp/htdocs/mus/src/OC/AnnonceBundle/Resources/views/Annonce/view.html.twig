{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <div style="float: left; margin-right: 1em;">
    {# On vérifie qu'une image soit bien associée à l'article #}
    {% if annonce.image is not null %}
      <img
        src="{{ asset(annonce.image.webPath) }}"
        alt="{{ annonce.image.alt }}"
        height="60"
      />
    {% endif %}
  </div>

  <h2>{{annonce.categorie }}-{{ annonce.title }}-{{ annonce.localisation }}{% if annonce.prix is not empty %}-{{ annonce.prix }}€{% endif %}</h2>
  <i>Par {{ annonce.user }}, le {{ annonce.date|date('d/m/Y') }}</i></br>
   <div class="well">
  
   <h3>Dèscription</h3>
  
    {{ annonce.content|raw }}</br>
	{% if annonce.website is not empty %}Pour plus d'information RDV sur le site <a href="{{ annonce.website }}"></a>{% endif %}
	
  
  </div>

  

  <p>
    <a href="{{ path('oc_annonce_look') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
	
	 {% if annonce.user ==  app.user %}
    <a href="{{ path('oc_annonce_edit', {'id': annonce.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('oc_annonce_delete', {'id': annonce.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
	{% endif %}
	
  </p>

{% endblock %}
