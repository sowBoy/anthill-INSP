
{% extends "OCPlatformBundle::layout.html.twig" %}

{% block title %}
  Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <div style="float: left; margin-right: 1em;">
    {# On vérifie qu'une image soit bien associée à l'article #}
    {% if annonce.image is not null %}
      <img
        src="{{ asset(annonce.image.webPath) }}"
        alt="{{ annonce.image.alt }}"
        height="60"
      />
    {% endif %}
  </div>

  <h2>{{annonce.categorie }}-{{ annonce.title }}-{{ annonce.localisation }}{% if annonce.prix is not empty %}-{{ annonce.prix }}€{% endif %}</h2>
  <i>Par {{ annonce.user }}, le {{ annonce.date|date('d/m/Y') }}, Email:{{ annonce.user.email }}{% if annonce.phone is not empty %}, Tel:{{ "0" }}{{ annonce.phone }}{% endif %}</i></br>
   <div class="well">
  
   <h3>Dèscription</h3>
  
    {{ annonce.content|raw }}</br>
	 </div>
	 {% if annonce.galeries is not empty %}
	 {% for galeries in annonce.galeries|slice(0, 4) %}
	 <div class='col-sm-3 col-lg-3 col-md-3'>
                            
                               <div class='thumbnail'>
                                <img
        src="{{ asset(galeries.webPath) }}"
        alt="{{ galeries.alt }}"
        >
                                   
                                </div>
                            </div>
	{% endfor %}
     {% endif %}
 {% if annonce.website is not empty %}
<a href="{{ annonce.website }}" class="btn btn-primary">En savoir plus</a>
  {% endif %}

  <p>
    <a href="{{ path('oc_annonce_look') }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
	
	 {% if annonce.user ==  app.user %}
    <a href="{{ path('oc_annonce_edit', {'id': annonce.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier l'annonce
    </a>
    <a href="{{ path('oc_annonce_delete', {'id': annonce.id}) }}" class="btn btn-danger">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer l'annonce
    </a>
	{% endif %}
	
  </p>

{% endblock %}
