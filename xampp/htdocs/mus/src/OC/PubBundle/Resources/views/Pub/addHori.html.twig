{% extends "OCPlatformBundle::layout.html.twig" %}
{% block title %}
  Bannière - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}
<h3>Ajout d'une bannière horizontale</h3>
<div class="well">
  {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}

  

  
   <div class="form-group">
    {{ form_label(form.name, "Nom commercial", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.name) }}
    <div class="col-sm-10">
      {{ form_widget(form.name) }}
    </div>
  </div>
  
  <div class="form-group">
    {{ form_label(form.lien, "Site Web", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    {{ form_errors(form.lien) }}
    <div class="col-sm-10">
      {{ form_widget(form.lien) }}
    </div>
  </div>
    {{ form_row(form.image) }}
 

  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

  {# Génération automatique des champs pas encore écrits.
     Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
     et tous les champs cachés (type « hidden »). #}
  {{ form_rest(form) }}

  {# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>
{% endblock %}