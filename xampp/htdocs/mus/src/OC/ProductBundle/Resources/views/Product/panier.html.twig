{% extends "OCBoutiqueBundle::layout.html.twig" %}

{% set totalHT = 0 %}
{% set totalTTC = 0%}
{% set totalTVA = 0%}
{% block body %}
   <div class="row col-sm-12">
           
            <h2>Votre panier</h2>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Références</th>
                        <th>Quantité</th>
                        <th>Prix unitaire</th>
                        <th>Total HT</th>
                    </tr>
                </thead>
                <tbody>
                    {% if produits|length == 0 %}
                        <tr>
                            <td colspan="4"><center>Aucun articles dans votre panier</center></td>
                        </tr>
                    {% endif %}
                    
                    {% for produit in produits %}
                    <tr>
                        <form action="{{ path('oc_product_ajouter', { 'id' : produit.id }) }}" method="get">
                            <td><img
        src="{{ asset(produit.image.webPath) }}"
        alt="{{ produit.image.alt }}"
        height="60"></td>
                            <td>
                                <select name="qte" class="span1" onChange="this.form.submit()">
                                    {% for i in 1..produit.quantity %}
                                        <option value="{{ i }}" {% if i == panier[produit.id] %} selected="selected" {% endif %}>{{ i }}</option>
                                    {% endfor %}
                                </select>&nbsp;
                                <a href="{{ path('oc_product_delete', { 'id' : produit.id }) }}"><i class="icon-trash"></i></a>
                            </td>
                            <td>{{ produit.prix }} €</td>
                            <td>{{ produit.prix * panier[produit.id] }} €</td>
							<td >
                        <a href="{{ path('oc_product_supprimer', {'id': produit.id}) }}" class="btn btn-danger" style="margin-bottom: 1em">
      <i class="glyphicon glyphicon-trash"></i>
    </a></td>
                        </form>
                    </tr>
                    {% set totalHT = totalHT + (produit.prix * panier[produit.id]) %}
					{% set totalTTC = totalTTC + (produit.prix * panier[produit.id])+(produit.prix * panier[produit.id])*produit.tva %}
					{% set totalTVA = totalTTC - totalHT %}
                {% endfor %}
                </tbody>
            </table>
            {% if produits|length != 0 %}
            <dl class="dl-horizontal pull-right">
                <dt>Total HT :</dt><dd>{{ totalHT }} €</dd>
                 <dt>TVA :</dt><dd>{{ totalTVA }} €</dd>
                <dt>Total TTC :</dt><dd>{{ totalTTC }} €</dd>
            </dl>
            {% endif %}
            <a href="{{ path('oc_boutique_menu') }}" class="btn btn-primary" style="margin-bottom:10px">Continuer mes achats</a>
			<a href="{{ path('oc_product_livraison') }}" class="btn btn-primary" style="margin-bottom:10px">Valider mon panier</a>
        </div>
       

{% endblock %}